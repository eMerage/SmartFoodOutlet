<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/ll_perant_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <emerge.project.onmealoutlet.ui.font.OpenSansLight
                android:id="@+id/textView_foodqty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/openSansLight10"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@+id/openSansLight14"
                android:layout_toRightOf="@+id/openSansLight14"
                android:text="2"
                android:textColor="@color/app_black" />

            <emerge.project.onmealoutlet.ui.font.OpenSansLight
                android:id="@+id/openSansLight14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/openSansLight10"
                android:layout_alignStart="@+id/openSansLight10"
                android:layout_below="@+id/openSansLight10"
                android:text="Quantity : "
                android:textColor="@color/app_black" />

            <emerge.project.onmealoutlet.ui.font.OpenSansLight
                android:id="@+id/textView_foodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/openSansLight10"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@+id/openSansLight10"
                android:layout_toRightOf="@+id/openSansLight10"
                android:text="REG1125"
                android:textColor="@color/app_black" />

            <emerge.project.onmealoutlet.ui.font.OpenSansLight
                android:id="@+id/openSansLight10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Food Name : "
                android:textColor="@color/app_black" />


            <emerge.project.onmealoutlet.ui.font.OpenSansLight
                android:id="@+id/openSansLight16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/openSansLight14"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="Type : "
                android:textColor="@color/app_black" />


            <emerge.project.onmealoutlet.ui.font.OpenSansLight
                android:id="@+id/textView_foodtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/openSansLight14"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/openSansLight16"
                android:layout_toRightOf="@+id/openSansLight16"
                android:text="2"
                android:textColor="@color/app_black" />

        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>