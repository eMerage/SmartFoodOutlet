<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <emerge.project.onmealoutlet.ui.font.OpenSansBold
            android:id="@+id/textview0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:text="Order Details"
            android:layout_marginBottom="10dp"
            android:textColor="@color/app_black"
            android:textSize="15sp" />


        <emerge.project.onmealoutlet.ui.font.OpenSansSemiBold
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview0"
            android:layout_marginLeft="5dp"
            android:text="Order #  "
            android:textColor="@color/app_black"
            android:textSize="15sp" />


        <emerge.project.onmealoutlet.ui.font.OpenSansLight
            android:id="@+id/textView_ordernumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview0"
            android:layout_toEndOf="@+id/textview1"
            android:layout_toRightOf="@+id/textview1"
            android:text="2548542365"
            android:textColor="@color/app_black"
            android:textSize="15sp" />



        <emerge.project.onmealoutlet.ui.font.OpenSansSemiBold
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview0"
            android:layout_marginLeft="5dp"
            android:layout_toStartOf="@+id/textView_orderdate"
            android:text="Date  "
            android:textColor="@color/app_black"
            android:textSize="15sp"
            android:layout_toLeftOf="@+id/textView_orderdate" />



        <emerge.project.onmealoutlet.ui.font.OpenSansLight
            android:id="@+id/textView_orderdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview0"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="2019-05-05"
            android:textColor="@color/app_black"
            android:textSize="15sp" />


        <emerge.project.onmealoutlet.ui.font.OpenSansSemiBold
            android:id="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview1"
            android:layout_marginLeft="5dp"
            android:text="Dispatch type  "
            android:textColor="@color/app_black"
            android:textSize="15sp" />

        <emerge.project.onmealoutlet.ui.font.OpenSansLight
            android:id="@+id/textView_dispatchtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview1"
            android:text="P"
            android:layout_toEndOf="@+id/textview3"
            android:layout_toRightOf="@+id/textview3"
            android:textColor="@color/app_black"
            android:textSize="15sp" />


        <emerge.project.onmealoutlet.ui.font.OpenSansSemiBold
            android:id="@+id/textview5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview2"
            android:layout_marginLeft="5dp"
            android:layout_toStartOf="@+id/textView_paymenttype"
            android:text="Payment Type  "
            android:textColor="@color/app_black"
            android:textSize="15sp"
            android:layout_toLeftOf="@+id/textView_paymenttype" />


        <emerge.project.onmealoutlet.ui.font.OpenSansLight
            android:id="@+id/textView_paymenttype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView_orderdate"
            android:layout_marginRight="5dp"
            android:text="Cash"
            android:textColor="@color/app_black"
            android:textSize="15sp" />



        <emerge.project.onmealoutlet.ui.font.OpenSansSemiBold
            android:id="@+id/textview6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_dispatchtype"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="Food Details"
            android:layout_marginBottom="10dp"
            android:textColor="@color/app_black"
            android:textSize="15sp" />



        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_order_history_food_Details"
            android:layout_width="match_parent"
            android:layout_below="@+id/textview6"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>