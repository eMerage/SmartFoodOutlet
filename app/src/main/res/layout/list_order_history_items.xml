<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <emerge.project.onmealoutlet.ui.font.OpenSansBold
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:text="Food Name  "
            android:textColor="@color/app_black"
            android:textSize="14sp" />


        <emerge.project.onmealoutlet.ui.font.OpenSansLight
            android:id="@+id/textview_history_items_foodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Food Name  "
            android:layout_toEndOf="@+id/textview1"
            android:layout_toRightOf="@+id/textview1"
            android:textColor="@color/app_black"
            android:textSize="14sp" />


        <emerge.project.onmealoutlet.ui.font.OpenSansSemiBold
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview1"
            android:layout_marginLeft="5dp"
            android:text="Tot.Quantity  "
            android:textColor="@color/app_black"
            android:textSize="14sp" />


        <emerge.project.onmealoutlet.ui.font.OpenSansLight
            android:id="@+id/textview_history_items_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview1"
            android:text="10000"
            android:layout_toEndOf="@+id/textview2"
            android:layout_toRightOf="@+id/textview2"
            android:textColor="@color/app_black"
            android:textSize="14sp" />


        <emerge.project.onmealoutlet.ui.font.OpenSansSemiBold
            android:id="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview1"
            android:layout_marginLeft="5dp"
            android:text="Tot.Value  "
            android:textColor="@color/app_black"
            android:layout_toStartOf="@+id/textview_history_items_value"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/textview_history_items_value" />



        <emerge.project.onmealoutlet.ui.font.OpenSansLight
            android:id="@+id/textview_history_items_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:text="10000"
            android:textColor="@color/app_black"
            android:textSize="14sp" />




    </RelativeLayout>

</android.support.v7.widget.CardView>