<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e7e7e7">


        <RelativeLayout
            android:id="@+id/relativelayout_titelbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/app_color_dark_red">


            <RelativeLayout
                android:id="@+id/relativelayout_filtermenu"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true">


                <ImageView
                    android:id="@+id/imageView_filter"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_timeline_white" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_slider_menu"
                android:layout_width="60dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView_slider_menu"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_view_headline_white" />

            </RelativeLayout>


            <emerge.project.onmealoutlet.ui.font.OpenSansLight
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:freezesText="true"
                android:text="ORDERS"
                android:textColor="@color/app_white"
                android:textSize="17sp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/viewpagertab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/relativelayout_titelbar"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/divider"
                android:layout_toStartOf="@+id/divider">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/divider2"
                    android:layout_toStartOf="@+id/divider2">

                    <emerge.project.onmealoutlet.ui.font.OpenSansLightButton
                        android:id="@+id/button_pending"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@color/app_color_red"
                        android:text="Pending" />
                </RelativeLayout>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/divider2"
                    android:layout_toRightOf="@+id/divider2">

                    <emerge.project.onmealoutlet.ui.font.OpenSansLightButton
                        android:id="@+id/button_process"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@color/app_btn_background"
                        android:text="Process" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/divider"
                android:layout_toRightOf="@+id/divider">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/divider3"
                    android:layout_toStartOf="@+id/divider3">


                    <emerge.project.onmealoutlet.ui.font.OpenSansLightButton
                        android:id="@+id/button_pack"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@color/app_btn_background"
                        android:text="Pack" />

                </RelativeLayout>

                <View
                    android:id="@+id/divider3"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/divider3"
                    android:layout_toRightOf="@+id/divider3">

                    <emerge.project.onmealoutlet.ui.font.OpenSansLightButton
                        android:id="@+id/button_dispatch"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@color/app_btn_background"
                        android:text="Dispatch" />

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/viewpagertab"
            android:layout_above="@+id/relativelayout_bottam_bar">

            <android.support.v4.widget.SwipeRefreshLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/swiperefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            </android.support.v4.widget.SwipeRefreshLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />


            <emerge.project.onmealoutlet.ui.font.OpenSansLightButton
                android:id="@+id/button_retry"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/textView_message"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/app_color_dark_red"
                android:text="Re-Try"
                android:textColor="@color/app_white"
                android:visibility="gone" />

            <emerge.project.onmealoutlet.ui.font.OpenSansLight
                android:id="@+id/textView_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="TextView"
                android:textColor="@color/app_color_dark_red"
                android:textSize="18sp"
                android:visibility="gone" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativelayout_bottam_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/app_color_dark_red">

            <emerge.project.onmealoutlet.ui.font.OpenSansLight
                android:id="@+id/textView_totalQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/openSansLight7"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="00"
                android:textColor="@color/app_white"
                android:textSize="16sp" />

            <emerge.project.onmealoutlet.ui.font.OpenSansLight
                android:id="@+id/textView_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="00 LKR"
                android:textColor="@color/app_white"
                android:textSize="16sp" />

            <emerge.project.onmealoutlet.ui.font.OpenSansLight
                android:id="@+id/openSansLight7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Total Income :"
                android:textColor="@color/app_white"
                android:textSize="16sp" />
        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/drawer_filter"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout2"
        android:layout_gravity="end"
        android:visibility="gone"
        android:layout_marginTop="50dip"
        android:background="@color/app_white">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_white"
            android:visibility="visible">


            <emerge.project.onmealoutlet.ui.font.OpenSansLight
                android:id="@+id/openSansLight16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Filtering"
                android:textColor="@color/app_black"
                android:textSize="20sp" />

            <emerge.project.onmealoutlet.ui.font.OpenSansLight
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/openSansLight16"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Dispatch Type "
                android:textColor="@color/text_title"
                android:textSize="16sp" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/radiogroup"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                <RadioButton android:id="@+id/radio_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery"
                    android:onClick="onRadioButtonClicked"/>
                <RadioButton android:id="@+id/radio_pickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick up"
                    android:onClick="onRadioButtonClicked"/>
                <RadioButton android:id="@+id/radio_dinein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dine-In"
                    android:onClick="onRadioButtonClicked"/>
            </RadioGroup>




            <RelativeLayout
                android:id="@+id/relativelayout_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/radiogroup"
                android:layout_marginTop="5dp">

                <emerge.project.onmealoutlet.ui.font.OpenSansLight
                    android:id="@+id/openSansLight21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Time Slots"
                    android:textColor="@color/text_title"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinner_timeslotes"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@+id/openSansLight21"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp" />
            </RelativeLayout>


            <emerge.project.onmealoutlet.ui.font.OpenSansLight
                android:id="@+id/openSansLight24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativelayout_time"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Delivery Rider "
                android:textColor="@color/text_title"
                android:textSize="16sp" />


            <Spinner
                android:id="@+id/spinner_riders"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/relativelayout1"
                android:layout_alignStart="@+id/relativelayout1"
                android:layout_below="@+id/openSansLight24"
                android:layout_marginTop="5dp" />




            <Button
                android:id="@+id/button_filter_fn"
                android:layout_below="@+id/spinner_riders"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/app_color_red"
                android:text="Filter" />



            <Button
                android:id="@+id/button_clear"
                android:layout_below="@+id/spinner_riders"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="120dp"
                android:background="@color/app_color_red"
                android:text="Clear" />




        </RelativeLayout>




        <emerge.project.onmealoutlet.ui.font.OpenSansLightButton
            android:id="@+id/button_filter"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selector_button_red"
            android:text="Filter"
            android:visibility="gone"
            android:textColor="@color/app_white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout2"
        android:layout_gravity="start"
        android:layout_marginTop="50dip"
        android:background="@color/app_white">


        <emerge.project.onmealoutlet.ui.font.OpenSansBold
            android:id="@+id/textview_outletname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Dosa"
            android:textColor="@color/app_black"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/listview_slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textview_outletname"
            android:divider="@color/app_white" />

        <emerge.project.onmealoutlet.ui.font.OpenSansLight
            android:id="@+id/textview_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Version"
            android:textColor="@color/app_black" />



    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>